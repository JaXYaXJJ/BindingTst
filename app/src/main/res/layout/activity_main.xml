<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <ImageView
        android:id="@+id/imageEarth"
        android:layout_width="202dp"
        android:layout_height="161dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/earth" />

    <ImageView
        android:id="@+id/imageCar"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginBottom="260dp"
        app:layout_constraintBottom_toTopOf="@+id/imageEarth"
        app:layout_constraintCircle="@id/imageEarth"
        app:layout_constraintCircleAngle="0"
        app:layout_constraintCircleRadius="100dp"
        app:layout_constraintEnd_toEndOf="@+id/imageEarth"
        app:layout_constraintStart_toStartOf="@+id/imageEarth"
        app:srcCompat="@drawable/space_car" />

    <ImageView
        android:id="@+id/imageUfo"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginEnd="16dp"
        app:layout_constraintBottom_toBottomOf="@+id/imageEarth"
        app:layout_constraintCircle="@id/imageEarth"
        app:layout_constraintCircleAngle="270"
        app:layout_constraintCircleRadius="150dp"
        app:layout_constraintEnd_toStartOf="@+id/imageEarth"
        app:layout_constraintTop_toTopOf="@+id/imageEarth"
        app:layout_constraintVertical_bias="0.546"
        app:srcCompat="@drawable/ufo" />

    <ImageView
        android:id="@+id/imageMoon"
        android:layout_width="100dp"
        android:layout_height="100dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.807"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.129"
        app:srcCompat="@drawable/moon" />

    <TextView
        android:id="@+id/myMainTxt"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:fontFamily="@font/bangers"
        android:text="Start!"
        android:textColor="@android:color/background_dark"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.837" />

</androidx.constraintlayout.widget.ConstraintLayout>